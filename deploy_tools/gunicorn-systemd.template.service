[Unit]
Description=Gunicorn server for DOMAIN

[Service]
Restart=on-failure
User=Bruno
WorkingDirectory=/home/Bruno/sites/www.DOMAIN
EnvironmentFile=/home/Bruno/sites/www.DOMAIN/.env

ExecStart=/home/Bruno/sites/www.DOMAIN/virtualenv/bin/gunicorn \
--bind unix:/tmp/DOMAIN.socket \
django_TDD.wsgi:application

[Install]
WantedBy=multi-user.target

